<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>QUINS INCISIUS ERUPCIONEN ALS 7-8 ANYS?</title>
    <style>
        body {
            background-color: #C7F48E;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        #contenedor {
            display: flex;
            align-items: flex-start;
        }

        #imagen-carie {
            width: 50%;
            max-width: 600px; /* Ajusta el tamaño según tus necesidades */
            margin-right: 20px;
        }

        .enfermedad-buttons {
            display: flex;
            flex-direction: column;
        }

        .enfermedad-button {
            background-color: transparent;
            color: #000;
            border: none;
            padding: 10px;
            margin: 5px;
            cursor: pointer;
        }

        .enfermedad-verde {
            background-color: #008000;
            color: #fff;
        }

        .enfermedad-rojo {
            background-color: #d9534f;
            color: #fff;
        }
    </style>
</head>

<body>
    <h1>QUINS INCISIUS ERUPCIONEN ALS 7-8 ANYS?</h1>

    <div id="contenedor">
        <img id="imagen-carie" src="Crono6.png" alt="Foto Carie">

        <div class="enfermedad-buttons">
            <button class="enfermedad-button" onclick="cambiarColor(this, 'rojo')">A) CENTRALS INFERIORS </button>
            <button class="enfermedad-button" onclick="cambiarColor(this, 'rojo')">B) CENTRALS SUPERIORS</button>
            <button class="enfermedad-button" onclick="cambiarColor(this, 'rojo')">C) LATERALS SUPERIORS</button>
            <button class="enfermedad-button" onclick="cambiarColor(this, 'verde')">C) B I C SON CORRECTES</button>
        </div>
    </div>

    <script>
        // Función para cambiar el color
        function cambiarColor(boton, color) {
            // Reiniciar todos los botones a color negro transparente
            var botones = document.getElementsByClassName("enfermedad-button");
            for (var i = 0; i < botones.length; i++) {
                botones[i].classList.remove("enfermedad-verde");
                botones[i].classList.remove("enfermedad-rojo");
            }

            // Poner el color correspondiente al botón clicado
            if (color === 'verde') {
                boton.classList.add("enfermedad-verde");
            } else if (color === 'rojo') {
                boton.classList.add("enfermedad-rojo");
            }

            // Cambiar el color del texto al hacer clic
            boton.style.color = color === 'verde';
        }

        // Función para reorganizar los botones aleatoriamente
        function reorganizarAleatoriamente() {
            var container = document.querySelector(".enfermedad-buttons");
            for (var i = container.children.length; i >= 0; i--) {
                container.appendChild(container.children[Math.random() * i | 0]);
            }
        }

        // Llamar a la función al cargar la página
        window.onload = reorganizarAleatoriamente;
    </script>
</body>

</html>
